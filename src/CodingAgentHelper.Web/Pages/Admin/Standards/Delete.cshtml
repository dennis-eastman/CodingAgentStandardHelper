@page "{id}"
@model CodingAgentHelper.Web.Pages.Admin.Standards.DeleteModel
@{
    ViewData["Title"] = "Delete Standard";
    ViewData["PageName"] = "Delete Standard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Warning!</strong> This action cannot be undone.
            </div>

            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-trash"></i> Delete Standard
                    </h4>
                </div>

                <div class="card-body">
                    <h5 class="card-title mb-3">Are you sure you want to delete this standard?</h5>

                    <div class="bg-light p-3 rounded mb-4">
                        <h6 class="fw-bold">Title:</h6>
                        <p class="mb-3">@Model.Standard.Title</p>

                        <h6 class="fw-bold">Category:</h6>
                        <p class="mb-3">
                            <span class="badge bg-info">@Model.Standard.Category</span>
                        </p>

                        <h6 class="fw-bold">Description:</h6>
                        <p>@Model.Standard.Description</p>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle"></i>
                        <strong>Please note:</strong>
                        <ul class="mb-0 mt-2">
                            <li>The standard will be permanently deleted from the system</li>
                            <li>All associated tags will be removed</li>
                            <li>This cannot be reversed</li>
                            <li>Consider archiving instead if you might need this later</li>
                        </ul>
                    </div>

                    <!-- Error Message -->
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mt-4 d-flex gap-2 justify-content-between">
                        <a href="/Admin/Standards/Details/@Model.Standard.Id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> No, Keep It
                        </a>

                        <form method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Yes, Delete Standard
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Info Panel -->
            <div class="card mt-4 bg-light">
                <div class="card-header bg-info text-white fw-bold">
                    <i class="fas fa-lightbulb"></i> Alternatives to Deletion
                </div>
                <div class="card-body">
                    <p class="small mb-3">Instead of deleting, you could:</p>
                    <ul class="small">
                        <li><strong>Archive:</strong> Change status to "Archived" to keep it for reference</li>
                        <li><strong>Deprecate:</strong> Change status to "Deprecated" and add a newer standard</li>
                        <li><strong>Deactivate:</strong> Change status to "Inactive" temporarily</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

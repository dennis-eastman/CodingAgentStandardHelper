@page
@model CodingAgentHelper.Web.Pages.Admin.Standards.IndexModel
@{
    ViewData["Title"] = "Standards";
    ViewData["PageName"] = "Standards";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h2">
                <i class="fas fa-list"></i> Standards
                <span class="badge badge-primary">@Model.Standards.TotalCount</span>
            </h1>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Admin/Standards/Create" class="btn btn-success">
                <i class="fas fa-plus"></i> New Standard
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="searchQuery" class="form-control" 
                           placeholder="Search standards..." value="@Model.SearchQuery">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Standards Table -->
    @if (Model.Standards?.Standards?.Count > 0)
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Tags</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var standard in Model.Standards.Standards)
                        {
                            <tr>
                                <td>
                                    <a href="/Admin/Standards/Details/@standard.Id" class="text-decoration-none">
                                        @standard.Title
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-info">@standard.Category</span>
                                </td>
                                <td>
                                    @{
                                        var statusClass = standard.Status switch
                                        {
                                            "Active" => "bg-success",
                                            "Inactive" => "bg-warning",
                                            "Archived" => "bg-secondary",
                                            "Deprecated" => "bg-danger",
                                            _ => "bg-light"
                                        };
                                    }
                                    <span class="badge @statusClass">@standard.Status</span>
                                </td>
                                <td>
                                    @{
                                        var priorityClass = standard.Priority switch
                                        {
                                            "Low" => "bg-info",
                                            "Medium" => "bg-warning",
                                            "High" => "bg-danger",
                                            "Critical" => "bg-dark",
                                            _ => "bg-light"
                                        };
                                    }
                                    <span class="badge @priorityClass">@standard.Priority</span>
                                </td>
                                <td>
                                    @if (standard.Tags?.Count > 0)
                                    {
                                        @foreach (var tag in standard.Tags.Take(2))
                                        {
                                            <span class="badge bg-secondary me-1">@tag</span>
                                        }
                                        @if (standard.Tags.Count > 2)
                                        {
                                            <span class="badge bg-secondary">+@(standard.Tags.Count - 2)</span>
                                        }
                                    }
                                </td>
                                <td class="text-end">
                                    <a href="/Admin/Standards/Details/@standard.Id" class="btn btn-sm btn-info" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/Admin/Standards/Edit/@standard.Id" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/Admin/Standards/Delete/@standard.Id" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @{
                    var totalPages = Model.Standards.TotalPages;
                    var currentPage = Model.PageNumber;
                    
                    // Previous button
                    <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" href="?pageNumber=@(currentPage - 1)&pageSize=@Model.PageSize&searchQuery=@Model.SearchQuery">
                            Previous
                        </a>
                    </li>

                    // Page numbers
                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        if (i == currentPage)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" href="?pageNumber=@i&pageSize=@Model.PageSize&searchQuery=@Model.SearchQuery">@i</a>
                            </li>
                        }
                    }

                    // Next button
                    <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                        <a class="page-link" href="?pageNumber=@(currentPage + 1)&pageSize=@Model.PageSize&searchQuery=@Model.SearchQuery">
                            Next
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i>
            No standards found. <a href="/Admin/Standards/Create" class="alert-link">Create one now</a>.
        </div>
    }
</div>
